﻿<div class="container mt-5">
    <h1>Nuevo Comic</h1>

    <p>
        <a asp-controller="Comics" asp-action="Index" class="btn btn-info">
            Atras
        </a>
    </p>

    <form method="post">
        <label>Id Comic</label>
        <input type="number" name="idComic" class="form-control" />
        <label>Nombre</label>
        <input type="text" name="nombre" class="form-control" />
        <label>Imagen</label>
        <input type="text" name="imagen" class="form-control" />
        <label>Descripcion</label>
        <input type="text" name="descripcion" class="form-control" />
        <button class="btn btn-success">
            Create Comic
        </button>
    </form>
</div>